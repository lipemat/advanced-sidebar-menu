.placeholder {
	:global(.components-placeholder__label) { /* stylelint-disable-line */
		flex-direction: column;
		width: 100%;
	}

	:global(.components-placeholder__instructions) { /* stylelint-disable-line */
		display: block !important;
	}

	:global(.dashicons) {
		font-size: 30px;
		height: 35px;
		width: 35px;
	}

	:global(.components-placeholder__fieldset) { /* stylelint-disable-line */
		text-align: center;
	}
}

.error {
	padding: 10px;
	margin: 2px;
	border: 4px double #d63638;
	font-size: 14px;
	font-weight: 600;
}

.spin-wrap {
	position: relative;
	min-height: 100px;
}

.spin {
	position: absolute;
	top: 50%;
	left: 50%;
	margin: -9px 0 0 -9px;
}

.spin-content {
	opacity: .2;
}
